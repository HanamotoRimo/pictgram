<div class="topic-new-wrapper" >
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="text-center">Comment</h1>
          <%= form_for @comment, url: topic_comments_path do |f| %>
            
            <div class="form-group">
              <%= f.label :description %>
              <%= f.text_area :description, class: 'form-control' %>
            </div>
            
            <%= f.submit 'コメント', class: 'btn btn-black btn-block' %>
            
          <% end %>  
      </div>
    </div>
  </div>
</div>